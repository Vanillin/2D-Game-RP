<Window x:Class="TwoD_Game_RP.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoD_Game_RP"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Изменить вид" Width="200" HorizontalAlignment="left" x:Name="ViewBtn" Click="ViewBtn_Click"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Выполнить задание" Width="200" x:Name="CompliteTaskBtn" Click="CompliteTaskBtn_Click" />
            <TextBox Width="500" x:Name="NameTaskTxt" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Перейти на локацию" Width="200" x:Name="TransiteLocBtn" Click="TransiteLocBtn_Click"/>
            <TextBox Width="500" x:Name="NameLocTxt" />
        </StackPanel>
    </StackPanel>
</Window>
