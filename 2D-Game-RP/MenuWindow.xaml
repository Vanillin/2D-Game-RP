<Window x:Class="Game_STALKER_Exclusion_Zone.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_STALKER_Exclusion_Zone"
        mc:Ignorable="d"
        Title="MenuWindow" WindowState="Maximized" Height="1024" Width="1900">
    <Canvas x:Name="BackGround">
        <StackPanel Width="500" Canvas.Top="200" Canvas.Left="700" Panel.ZIndex="1">
            <Button x:Name="MenuContinue" Background="LightGray" Content="Продолжить" FontSize="30" Margin="0, 10" Click="MenuContinue_Click"/>
            <Button x:Name="MenuStartNewGame" Background="LightGray" Content="Новая игра" FontSize="30" Margin="0, 10" Click="MenuStartNewGame_Click"/>
            <Button x:Name="MenuSave" Background="LightGray" Content="Сохранить" FontSize="30" Margin="0, 10" IsEnabled="False"/>
            <Button Background="LightGray" Content="-" FontSize="30" Margin="0, 10" IsEnabled="False"/>
            <Button x:Name="MenuLessons" Background="LightGray" Content="Управление" FontSize="30" Margin="0, 10" Click="MenuLessons_Click"/>
            <Button x:Name="MenuExit" Background="LightGray" Content="Выход" FontSize="30" Margin="0, 10" Click="MenuExit_Click"/>
        </StackPanel>
    </Canvas>
</Window>
