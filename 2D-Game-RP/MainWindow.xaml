<Window x:Class="TwoD_Game_RP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_STALKER_Exclusion_Zone"
        mc:Ignorable="d"
        Title="Game STALKER" WindowState="Maximized" Height="1200" Width="1920" Icon="gamedata\textures\icon.png" KeyUp="Window_KeyUp" KeyDown="Window_KeyDown">

    <Viewbox>        <!--Stretch="Uniform"-->
        <StackPanel>
            <Menu Height="Auto">
                <MenuItem Header="Отладчик тестера" Click="TestWindow_Click" FontSize="20"/>
            </Menu>
            <Grid Height="1200" Width="1920">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1000"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Background>
                        <ImageBrush ImageSource="gamedata\textures\mainfon1.png" Stretch="Fill" />
                    </Grid.Background>

                    <Grid Grid.Column="0" Grid.ColumnSpan="3">

                        <Canvas x:Name="Map" Height="900" Width="1800"
                            MouseLeftButtonDown="Map_MouseLeftButtonDown" MouseRightButtonDown="Map_MouseRightButtonDown">
                            <Canvas.Background>
                                <ImageBrush ImageSource="gamedata\textures\circle.png" AlignmentX="Center" Stretch="Fill" />
                            </Canvas.Background>
                        </Canvas>
                    </Grid>

                    <Grid x:Name="TaskWindow" Grid.Column="2" Width="640" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\dialogfon.png" AlignmentX="Center" Stretch="Fill" />
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border CornerRadius="10" Grid.Row="0" Height="70" Width="300" Margin="20,20,0,0" Background="AntiqueWhite" HorizontalAlignment="Left"  >
                            <Button x:Name="ExitTaskBtn" Background="Transparent"  Click="ExitTaskBtn_Click">
                                <Label Content="Выйти из записной книжки" FontSize="20"/>
                            </Button>
                        </Border>
                        <StackPanel x:Name="ListTasks" Grid.Row="1" Margin="20">

                        </StackPanel>
                    </Grid>

                    <Grid x:Name="InventoryPlayerWindow" Grid.Column="2" Width="640" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\maininvbig.png" AlignmentX="Center" Stretch="Fill" />
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Canvas x:Name="InventoryPlayerCanvas" Grid.Row="1"  Height="Auto" Width="Auto" Margin="20"
                            MouseLeftButtonDown="InventoryPlayerCanvas_MouseLeftButtonDown" MouseRightButtonDown="InventoryPlayerCanvas_MouseRightButtonDown"/>
                    </Grid>
                    <Grid x:Name="InventoryEnemyWindow" Grid.Column="0" Width="640" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\maininvbig.png" AlignmentX="Center" Stretch="Fill" />
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border CornerRadius="10" Grid.Row="0" Height="70" Width="300" Margin="20,20,0,0" Background="AntiqueWhite" HorizontalAlignment="Left"  >
                            <Button x:Name="ExitInventorySearchBtn" Background="Transparent"  Click="ExitInventorySearchBtn_Click">
                                <Label Content="Прекратить обыск" FontSize="20"/>
                            </Button>
                        </Border>
                        <Canvas x:Name="InventoryEnemyCanvas" Grid.Row="1"  Height="Auto" Width="Auto" Margin="20"
                            MouseLeftButtonDown="InventoryEnemyCanvas_MouseLeftButtonDown" MouseRightButtonDown="InventoryEnemyCanvas_MouseRightButtonDown"/>
                    </Grid>

                    <Grid x:Name="DialogWindow" Grid.Column="2" Width="700" Margin="20" Visibility="Collapsed">
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\dialogfon.png" AlignmentX="Center" Stretch="Fill" />
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border CornerRadius="10" Height="70" Width="300" Margin="20,20,0,0" Background="AntiqueWhite" HorizontalAlignment="Left"  >
                            <Button x:Name="ExitDialogBtn" Grid.Row="0"  Background="Transparent"  Click="ExitDialogBtn_Click">
                                <Label Content="Выйти из диалога" FontSize="20"/>
                            </Button>
                        </Border>

                        <ScrollViewer x:Name="ScrollView" Grid.Row ="1" Margin="20,10,20,10" VerticalScrollBarVisibility="Hidden">
                            <StackPanel x:Name="DialogStackPanel">

                            </StackPanel>
                        </ScrollViewer>
                        <StackPanel x:Name="DialogBtn" Grid.Row="2" Margin="20,0,20,20">

                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\mainleft.png" Stretch="Fill" />
                        </Grid.Background>

                        <ProgressBar Grid.Row="0" Grid.ColumnSpan="4" x:Name="HealthBar" Value="50" Height="40" Margin="20, 20,20,40">
                            <ProgressBar.Background>
                                <ImageBrush ImageSource="gamedata\textures\screen.png" Stretch="Fill" />
                            </ProgressBar.Background>
                        </ProgressBar>
                        <Border Grid.Row="1" Grid.Column="0" x:Name="EBtn" CornerRadius="10" Height="50" Width="80" VerticalAlignment="Top" Background="Tan">
                            <Button Click="EBtn_Click" Background="Transparent">
                                <Label Content="E" FontSize="20" Margin="20,0" Foreground="White"/>
                            </Button>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" x:Name="RBtn" CornerRadius="10" Height="50" Width="80" VerticalAlignment="Top"  Background="AntiqueWhite">
                            <Button Click="RBtn_Click" Background="Transparent">
                                <Label Content="R" FontSize="20" Margin="20,0" Foreground="White"/>
                            </Button>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="2" x:Name="FBtn" CornerRadius="10" Height="50" Width="80" VerticalAlignment="Top"  Background="AntiqueWhite">
                            <Button Click="FBtn_Click" Background="Transparent">
                                <Label Content="F" FontSize="20" Margin="20,0" Foreground="White"/>
                            </Button>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="3" x:Name="QBtn" CornerRadius="10" Height="50" Width="80" VerticalAlignment="Top"  Background="AntiqueWhite" >
                            <Button Click="QBtn_Click" Background="Transparent">
                                <Label Content="Q" FontSize="20" Margin="20,0" Foreground="White"/>
                            </Button>
                        </Border>

                        <!--<Border CornerRadius="10" Height="50" Margin="20" Background="AntiqueWhite" VerticalAlignment="Bottom" >
                            <Button Click="Exit_Click" Background="Transparent">
                                <Label Content="ВЫХОД" FontSize="20"/>
                            </Button>
                        </Border>-->
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\mainleft.png" Stretch="Fill" />
                        </Grid.Background>
                        <TextBox x:Name="WatchTextBlock" FontSize="22" Margin="20" Padding="10" TextWrapping="Wrap" Foreground="LightGreen">
                            <TextBox.Background>
                                <ImageBrush ImageSource="gamedata\textures\screen.png" Stretch="Fill" />
                            </TextBox.Background>
                        </TextBox>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\mainleft.png" Stretch="Fill" />
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="20, 20, 10, 50" >
                            <Border.Background>
                                <ImageBrush ImageSource="gamedata\textures\screen.png" Stretch="Fill" />
                            </Border.Background>
                            <Image x:Name="GunInHandImage"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" Margin="40,0,40,20" >
                            <Border.Background>
                                <ImageBrush ImageSource="gamedata\textures\screen.png" Stretch="Fill" />
                            </Border.Background>
                            <Image x:Name="GunInBackImage"/>
                        </Border>
                        <Button x:Name="ReverseGunsBtn" Grid.Row="0" Grid.Column="1" Width="50" Height="50" Click="ReverseGunsBtn_Click" HorizontalAlignment="Right" Margin="0,0,40,0">
                            <Button.Background>
                                <ImageBrush ImageSource="gamedata\textures\button.png" Stretch="Fill" />
                            </Button.Background>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions >
                        <Grid.Background>
                            <ImageBrush ImageSource="gamedata\textures\mainleft.png" Stretch="Fill" />
                        </Grid.Background>
                        <Canvas Grid.Column="0" x:Name="InventoryHotBar" Margin="20,20,20,20"
                                    MouseLeftButtonDown="InventoryHotBar_MouseLeftButtonDown" MouseRightButtonDown="InventoryHotBar_MouseRightButtonDown">
                            <Canvas.Background>
                                <ImageBrush ImageSource="gamedata\textures\screen.png" Stretch="Fill" />
                            </Canvas.Background>
                        </Canvas>
                        <Button x:Name="InventoryBtn" Click="InventoryBtn_Click" Grid.Column="1" Margin="0, 20 ,20,20" VerticalAlignment="Top" Width="100" Height="100">
                            <Button.Background>
                                <ImageBrush ImageSource="gamedata\textures\button.png" Stretch="Fill" />
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </StackPanel>
    </Viewbox>
</Window>